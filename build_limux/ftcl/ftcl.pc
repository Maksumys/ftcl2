# this gives access to the ftcl header files
prefix=/usr/local
exec_prefix=/usr/local
libdir=/usr/local/lib
includedir=/usr/local/include

Name: ftcl
Description: Fault tolerance cluster library.
Version: 0.0.1
Requires:
Libs: -L/usr/local/lib -lftcl
Cflags: -I/usr/local/include

# pkg-config does not understand Cxxflags, etc. So we allow users to
# query them using the --variable option

cxxflags=  -I/usr/local/include
fflags= -I/usr/local/include
fcflags= -I/usr/local/include
